{% extends 'base.html.twig' %}

{% block body_id 'admin' %}

{% block main %}
    <div class="row">
        <div class="col-sm-6">
            <div class="well">
                <legend><i class="fa fa-envelope-o" aria-hidden="true"></i> Send notice</legend>
                <form action="{{ path('timetable_notice', { id: id }) }}" method="post">
                    <fieldset>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <textarea id="email" name="email" class="form-control"/></textarea>
                        </div>
                        <div class="form-group">
                            <label for="sms">SMS</label>
                            <textarea id="sms" name="sms" class="form-control"/></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> Send
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="well">
                <legend><i class="fa fa-user" aria-hidden="true"></i> Users</legend>
                {% for user in users %}
                    {{ user.username }} [{{ user.type }}]<br>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
