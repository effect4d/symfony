{% extends 'base.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-sm-5">
            <div class="well">
                {{ form_start(form) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.isActive) }}
                    {{ form_row(form.boolRoles) }}
                    
                    <button type="submit" class="btn btn-primary">Edit</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
